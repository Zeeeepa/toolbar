{
    "id": "automationmanager",
    "name": "Automation Manager",
    "version": "1.0.0",
    "description": "Provides script management and execution functionality.",
    "author": "Toolbar Team",
    "plugin_type": "automation",
    "main_class": "AutomationManagerPlugin",
    "dependencies": [],
    "min_toolbar_version": "1.0.0",
    "max_toolbar_version": "*",
    "settings_schema": {
        "scripts_directory": {
            "type": "string",
            "description": "Directory to store scripts",
            "default": ""
        },
        "python_path": {
            "type": "string",
            "description": "Path to Python executable",
            "default": "python"
        },
        "node_path": {
            "type": "string",
            "description": "Path to Node.js executable",
            "default": "node"
        },
        "bash_path": {
            "type": "string",
            "description": "Path to Bash executable",
            "default": "bash"
        },
        "security": {
            "type": "object",
            "description": "Security settings",
            "properties": {
                "allow_network_access": {
                    "type": "boolean",
                    "description": "Allow scripts to access the network",
                    "default": false
                },
                "allow_file_system_access": {
                    "type": "boolean",
                    "description": "Allow scripts to access the file system",
                    "default": true
                },
                "allow_process_execution": {
                    "type": "boolean",
                    "description": "Allow scripts to execute processes",
                    "default": false
                }
            }
        }
    }
}
